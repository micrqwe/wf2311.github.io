  line-height: $text-line-height
*
  box-sizing: border-box
.fa-clipboard
  position: absolute
  right: 10px
  z-index: 1
  margin-top: -1rem
  color: $highlight-aqua
  cursor: pointer
  transition: color 0.2s

  &:hover
    color: darken($highlight-aqua, 20%)
.copy-notice
  position: absolute
  top: 4px
  right: 0
  z-index: 999
  background: darken($highlight-background, 5)
  color: $highlight-aqua
  opacity: 0
.copy-icon
  position: absolute
  top: 23px
  right: 0
  z-index: 1000
