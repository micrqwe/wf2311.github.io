// third-party
@import "_third-party/jquery.fancybox.min.css"
@import "_third-party/normalize.min.css"
// project
@import "var"
@import "style"
@import "_highlight/highlight"

.fa-clipboard
  //position: fixed
  right: 10px
  z-index: 1
  margin-top: -1rem
  color: $highlight-aqua
  cursor: pointer
  transition: color 0.2s

  &:hover
    color: darken($highlight-aqua, 20%)
.copy-notice
  position: absolute
  top: 4px
  right: 0
  z-index: 1
  background: darken($highlight-background, 5)
  color: $highlight-aqua
  opacity: 0