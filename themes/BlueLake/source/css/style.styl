  z-index 10
  position fixed
  right 2em
  bottom 2em
  cursor pointer

#render
  display none
  z-index 10
  position fixed
  right 2em
  bottom 2em
  .rInput
    display inline-block
  #choose-id
    display block
    width 100%
    font-size 1em
    line-height 20px
    resize none
    font-family inherit
    color inherit
    box-sizing border-box
    margin 0px
    padding 0.3em
    border-width 1px
    border-style solid
    border-color #44779c
    border-image initial
    border-radius 4px 0px 0px 4px
  .rSendBtn
    display inline-block
  #rImgBtn
    background-color #44779c
    color #fff
    width 80px
    height 30px
    display inline-block
    text-align center
    line-height 30px
    cursor pointer
    z-index 9999999
    border-radius 0px 4px 4px 0px

/* back-to-top */
#totop
  position fixed
  right 50px
  bottom 50px
  display block
  visibility hidden
  width 32px
  height 54px
  line-height 56px
  overflow hidden
  color #40759b
  text-align center
  text-shadow 0px 2px 2px #40759b
  opacity 0
  -webkit-transition visibility 0.6s cubic-bezier(0.6, 0.04, 0.98, 0.335), opacity 0.6s cubic-bezier(0.6, 0.04, 0.98, 0.335), -webkit-transform 0.6s cubic-bezier(0.6, 0.04, 0.98, 0.335)
  -moz-transition visibility 0.6s cubic-bezier(0.6, 0.04, 0.98, 0.335), opacity 0.6s cubic-bezier(0.6, 0.04, 0.98, 0.335), -moz-transform 0.6s cubic-bezier(0.6, 0.04, 0.98, 0.335)
  transition visibility 0.6s cubic-bezier(0.6, 0.04, 0.98, 0.335), opacity 0.6s cubic-bezier(0.6, 0.04, 0.98, 0.335), transform 0.6s cubic-bezier(0.6, 0.04, 0.98, 0.335)
  &:before
    font-family "iconfont" !important
    content '\e00c'
    font-size 54px
    margin-left -0.2em
  &.launch
    opacity 0
    -webkit-transform translateY(-500px)
    -moz-transform translateY(-500px)
    -ms-transform translateY(-500px)
    transform translateY(-500px)
    pointer-events none
  &.show
    visibility visible
    opacity 1

/* about page */
.author-page
  padding 40px 0 20px 0
  text-align center
  &:after
    content ""
    clear both
    display block
  .photo
    display inline-block
    vertical-align top
    box-sizing content-box
    padding 0 30px 30px 30px
    width 180px
    height 180px
    padding 0 0 30px 0
    img
      width 100%
      height 100%
      padding 0
      margin 0
      border-radius 50%
      -webkit-box-shadow 1px 2px 3px #adc2d7
      box-shadow 1px 2px 3px #adc2d7
  .author
    font-size 16px
    white-space nowrap
    display inline-block
    vertical-align top
    text-align left
    font-size 14px
    font-size 12px
    .fa
      margin-right 0.4em
      &:before
        margin-right 0.2em

/* toc*/
#toc
  display none
  li
    font-weight bold
  .toc-child
    margin-left 0.6em
    padding-left 0
    li
      font-weight normal
      &:first-of-type
        margin-top 0
      &:last-of-type
        margin-bottom 0

.fixed
  position fixed
  top 0
  &.scroll
    overflow-y scroll
    max-height 100%

/* table*/
table,
tbody,
tr,
th,
td
  border-collapse collapse
  box-sizing border-box
  border-spacing 0
  cellspacing 0
  cellpadding 0
  padding 0
  margin 0

table
  margin auto auto 15px
  width 100%
  background transparent
  overflow-x auto
  display block
  th
    font-weight bold
    padding 5px 10px
    border 1px solid #d8e2eb
    border-bottom-width 2px
  tr
    &:nth-child(2n)
      background #f4fcff
  td
    padding 5px 10px
    border 1px solid #d8e2eb

