.widget
    .widget-title
      a(href=url_for('/'))
        i(class='fa fa-user')= theme.title
      a(title="点击展开或收起条目", href="javascript:void(0)",onclick="showOrHide('info-list', 'info-list-expand', 'none')")
          span(id='info-list-expand', style='font-size:12px;color:red')=' 点击收起 '

    ul(class="post-list info-list")
      li(style="text-align:center")
        img(src=theme.avatar, class="avatar")
        //p(style="text-align:center")= "好好学习，天天搬砖"
        p(style="text-align:center;padding-top: 10px")
            i(class='fa fa-lg fa-map-marker')= '杭州'
        hr(style="height:0.1px;border:none;border-top:1px dashed #0066CC;")
      li(class="info-icon" style="text-align:center")
          each item in theme.info.items
              a(class="post-list-link" href=item.url data-image=item.image target="_blank" title=item.title+' : '+item.content)
                  i(class="fa fa-lg fa-"+item.label)
          div(id="infoImage")
